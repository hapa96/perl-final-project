    [ ] False, Nil, Null, None, Empty
    [ ] 0, '0', 'false', 'False', 'FALSE'
    [ ] 0, +0, -0, 0.0, -0.0
    [ ] 0, '0', '', (), undef
    [ ] 0, '0', '', (), []

