    [ ] 'whence' and 'whither' and 'thither'
    [ ] 'gather' and 'take'    and 'otherwise'
    [ ] 'case'   and 'of'      and 'or'
    [ ] 'given'  and 'when'    and 'default'
    [ ] 'switch' and 'case'    and 'else'

